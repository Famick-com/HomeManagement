<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.QuickConsumePage"
             Title="Quick Consume"
             Shell.NavBarIsVisible="True"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}" />
    </Shell.BackButtonBehavior>

    <Grid Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- State: Scanning (spinner while opening scanner) -->
        <VerticalStackLayout x:Name="ScanningState"
                             IsVisible="True"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20">
            <ActivityIndicator IsRunning="True"
                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                               WidthRequest="60"
                               HeightRequest="60" />
            <Label Text="Opening scanner..."
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
        </VerticalStackLayout>

        <!-- State: Product Found -->
        <ScrollView x:Name="ProductFoundState" IsVisible="False">
            <VerticalStackLayout Spacing="20" Padding="0,10">

                <!-- Product Info Card -->
                <Border Padding="20"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                    <Border.Shadow>
                        <Shadow Brush="{AppThemeBinding Light=#40000000, Dark=#20000000}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.15" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Image x:Name="ProductImage"
                               HeightRequest="120"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               IsVisible="False" />
                        <Label x:Name="ProductNameLabel"
                               Text="Product Name"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        <Label x:Name="ProductLocationLabel"
                               Text="Location: Pantry"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                        <Label x:Name="TotalStockLabel"
                               Text="Total in stock: 5"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Stock Entry Selection (when multiple) -->
                <VerticalStackLayout x:Name="StockSelectionSection" IsVisible="False" Spacing="10">
                    <Label Text="Select entry to consume from:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#DDDDDD}" />

                    <CollectionView x:Name="StockEntriesCollection"
                                    SelectionMode="Single"
                                    SelectionChanged="OnStockEntrySelected"
                                    HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,4"
                                        StrokeShape="RoundRectangle 8"
                                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}">
                                    <Grid ColumnSpacing="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout Grid.Column="0" Spacing="3">
                                            <Label Text="{Binding ExpiryDisplayText}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding ExpiryTextColor}" />
                                            <Label Text="{Binding LocationName, StringFormat='Location: {0}'}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                            <Label Text="{Binding Amount, StringFormat='{0:F1}'}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="End"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                            <Label Text="{Binding QuantityUnitName}"
                                                   FontSize="12"
                                                   HorizontalOptions="End"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Selected Entry Display (when single or after selection) -->
                <Border x:Name="SelectedEntryCard"
                        IsVisible="False"
                        Padding="15"
                        StrokeShape="RoundRectangle 8"
                        Stroke="#4CAF50"
                        StrokeThickness="2"
                        BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}">
                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0" Spacing="3">
                            <Label x:Name="SelectedExpiryLabel"
                                   Text="Expires: Jan 15, 2025"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label x:Name="SelectedLocationLabel"
                                   Text="Location: Pantry"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#388E3C, Dark=#81C784}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label x:Name="SelectedAmountLabel"
                                   Text="3.0"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}" />
                            <Label x:Name="SelectedUnitLabel"
                                   Text="units"
                                   FontSize="12"
                                   HorizontalOptions="End"
                                   TextColor="{AppThemeBinding Light=#388E3C, Dark=#81C784}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Consume Actions -->
                <VerticalStackLayout x:Name="ConsumeActionsSection" IsVisible="False" Spacing="15">

                    <!-- Consume 1 Unit Button (default action) -->
                    <Button x:Name="ConsumeOneButton"
                            Text="Consume 1"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="50"
                            Clicked="OnConsumeEntireClicked" />

                    <!-- Consume More Button -->
                    <Button x:Name="ConsumePartButton"
                            Text="Consume More..."
                            FontSize="16"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                            TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                            CornerRadius="8"
                            HeightRequest="50"
                            Clicked="OnConsumePartClicked" />
                </VerticalStackLayout>

                <!-- Partial Amount Entry -->
                <VerticalStackLayout x:Name="PartialAmountSection" IsVisible="False" Spacing="15">
                    <Label Text="Enter amount to consume:"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#DDDDDD}" />

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Entry x:Name="AmountEntry"
                               Grid.Column="0"
                               Keyboard="Numeric"
                               Placeholder="1.0"
                               FontSize="20"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        <Label x:Name="AmountUnitLabel"
                               Grid.Column="1"
                               Text="units"
                               FontSize="18"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                    </Grid>

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Text="Cancel"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                                CornerRadius="8"
                                HeightRequest="50"
                                Clicked="OnCancelPartialClicked" />
                        <Button Grid.Column="1"
                                Text="Consume"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"
                                Clicked="OnConfirmPartialClicked" />
                    </Grid>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- State: Not Found -->
        <VerticalStackLayout x:Name="NotFoundState"
                             IsVisible="False"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20"
                             Padding="30">
            <Label Text="&#128269;"
                   FontSize="60"
                   HorizontalOptions="Center" />
            <Label Text="Product Not Found"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Label x:Name="NotFoundBarcodeLabel"
                   Text="Barcode: 123456789"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
            <Label Text="This product is not in your inventory."
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
            <Button Text="Scan Another"
                    FontSize="16"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    WidthRequest="200"
                    Clicked="OnScanAnotherClicked" />
        </VerticalStackLayout>

        <!-- State: Success -->
        <VerticalStackLayout x:Name="SuccessState"
                             IsVisible="False"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20"
                             Padding="30">
            <Label Text="&#10004;"
                   FontSize="80"
                   HorizontalOptions="Center"
                   TextColor="#4CAF50" />
            <Label Text="Consumed!"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Label x:Name="SuccessDetailLabel"
                   Text="Removed 1 unit of Product Name"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
            <Button Text="Scan Another"
                    FontSize="16"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    WidthRequest="200"
                    Clicked="OnScanAnotherClicked" />
            <Button Text="Done"
                    FontSize="16"
                    BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                    CornerRadius="8"
                    HeightRequest="50"
                    WidthRequest="200"
                    Clicked="OnDoneClicked" />
        </VerticalStackLayout>

        <!-- State: Error -->
        <VerticalStackLayout x:Name="ErrorState"
                             IsVisible="False"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20"
                             Padding="30">
            <Label Text="&#9888;"
                   FontSize="60"
                   HorizontalOptions="Center"
                   TextColor="#F44336" />
            <Label Text="Error"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Label x:Name="ErrorMessageLabel"
                   Text="Something went wrong"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
            <Button Text="Try Again"
                    FontSize="16"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    WidthRequest="200"
                    Clicked="OnScanAnotherClicked" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
