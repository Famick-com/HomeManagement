<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.SettingsPage"
             Title="Settings"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <Label Text="Settings"
                   FontSize="24"
                   FontAttributes="Bold"
                   Padding="20,30,20,15"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- Settings List -->
            <Border StrokeShape="RoundRectangle 12" Stroke="Transparent" Margin="15,0"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="0">

                    <!-- Home Setup -->
                    <Grid Padding="16,14" ColumnDefinitions="Auto,*,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeSetupTapped" />
                        </Grid.GestureRecognizers>
                        <Label Grid.Column="0" Text="&#x1F3E0;" FontSize="22" VerticalOptions="Center"
                               Margin="0,0,14,0" />
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                            <Label Text="Home Setup" FontSize="15" FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            <Label Text="Re-run the setup wizard" FontSize="13"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="&#x276F;" FontSize="16" VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#CCCCCC, Dark=#666666}" />
                    </Grid>

                    <BoxView HeightRequest="1" Margin="50,0,16,0"
                             BackgroundColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />

                    <!-- Notifications -->
                    <Grid Padding="16,14" ColumnDefinitions="Auto,*,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNotificationsTapped" />
                        </Grid.GestureRecognizers>
                        <Label Grid.Column="0" Text="&#x1F514;" FontSize="22" VerticalOptions="Center"
                               Margin="0,0,14,0" />
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                            <Label Text="Notifications" FontSize="15" FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            <Label Text="Configure how notifications are sent to you" FontSize="13"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="&#x276F;" FontSize="16" VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#CCCCCC, Dark=#666666}" />
                    </Grid>

                    <BoxView HeightRequest="1" Margin="50,0,16,0"
                             BackgroundColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />

                    <!-- Barcode Scanner -->
                    <Grid Padding="16,14" ColumnDefinitions="Auto,*,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBarcodeScannerTapped" />
                        </Grid.GestureRecognizers>
                        <Label Grid.Column="0" Text="&#x1F4F7;" FontSize="22" VerticalOptions="Center"
                               Margin="0,0,14,0" />
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                            <Label Text="Barcode Scanner" FontSize="15" FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            <Label Text="Configure a barcode scanner" FontSize="13"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="&#x276F;" FontSize="16" VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#CCCCCC, Dark=#666666}" />
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- About -->
            <Border StrokeShape="RoundRectangle 12" Stroke="Transparent" Margin="15,20,15,30"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                <Grid Padding="16,14" ColumnDefinitions="Auto,*,Auto">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAboutTapped" />
                    </Grid.GestureRecognizers>
                    <Label Grid.Column="0" Text="&#x2139;&#xFE0F;" FontSize="22" VerticalOptions="Center"
                           Margin="0,0,14,0" />
                    <Label Grid.Column="1" Text="About Famick Home" FontSize="15" FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                    <Label Grid.Column="2" Text="&#x276F;" FontSize="16" VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#CCCCCC, Dark=#666666}" />
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
