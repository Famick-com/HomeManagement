<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.AddItemPage"
             Title="Add Item">

    <Grid RowDefinitions="Auto,*">

        <!-- Row 0: Search Entry (always visible on top) -->
        <VerticalStackLayout Grid.Row="0" Padding="20,20,20,0" Spacing="10"
                             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">

            <!-- Barcode Display -->
            <Border x:Name="BarcodeFrame"
                    Padding="15"
                    StrokeShape="RoundRectangle 10"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                    IsVisible="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Barcode Scanned"
                           FontSize="12"
                           TextColor="Gray" />
                    <Label x:Name="BarcodeLabel"
                           FontSize="18"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Border>

            <!-- Product Lookup Result -->
            <Border x:Name="LookupResultFrame"
                    Padding="15"
                    StrokeShape="RoundRectangle 10"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"
                    IsVisible="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Product Found"
                           FontSize="12"
                           TextColor="Gray" />
                    <Label x:Name="LookupProductName"
                           FontSize="16"
                           FontAttributes="Bold" />
                    <Label x:Name="LookupPrice"
                           FontSize="14"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Border>

            <Label Text="Product Name" FontSize="14" FontAttributes="Bold" />
            <Entry x:Name="ProductNameEntry"
                   Placeholder="Search or type a product name..."
                   ReturnType="Search"
                   Completed="OnSearchCompleted"
                   TextChanged="OnProductNameTextChanged" />
        </VerticalStackLayout>

        <!-- Row 1: Layered content area -->
        <Grid Grid.Row="1">

            <!-- Layer 0: Normal form content (scrollable) -->
            <ScrollView x:Name="FormScrollView">
                <VerticalStackLayout Spacing="20" Padding="20">

                    <Label Text="Quantity" FontSize="14" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Button x:Name="MinusButton"
                                Text="-"
                                Clicked="OnMinusClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontSize="24"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />

                        <Label x:Name="QuantityLabel"
                               Text="1"
                               FontSize="28"
                               FontAttributes="Bold"
                               WidthRequest="60"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />

                        <Button x:Name="PlusButton"
                                Text="+"
                                Clicked="OnPlusClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontSize="24"
                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                                TextColor="White" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <CheckBox x:Name="MarkPurchasedCheckBox"
                                  IsChecked="False"
                                  Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                  VerticalOptions="Center" />
                        <Label Text="Mark as purchased"
                               FontSize="14"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label Text="Note (optional)" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="NoteEntry"
                           Placeholder="Add a note..." />

                    <!-- Loading Indicator -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       IsVisible="False" />

                    <!-- Add Button -->
                    <Button x:Name="AddButton"
                            Text="Add to List"
                            Clicked="OnAddClicked"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="18"
                            HeightRequest="50"
                            CornerRadius="25" />

                    <!-- Cancel Button -->
                    <Button Text="Cancel"
                            Clicked="OnCancelClicked"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />

                </VerticalStackLayout>
            </ScrollView>

            <!-- Layer 1: Full-screen search results overlay -->
            <Grid x:Name="SearchOverlay"
                  IsVisible="False"
                  BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}"
                  RowDefinitions="*,Auto">

                <!-- Search Results (fills available space) -->
                <CollectionView x:Name="SearchResultsView"
                                Grid.Row="0"
                                SelectionMode="Single"
                                SelectionChanged="OnSearchResultSelected"
                                Margin="10,5">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="0,3" StrokeShape="RoundRectangle 10" Stroke="Transparent" StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#3A3A3A}">
                                <Grid ColumnDefinitions="56,*" ColumnSpacing="12">
                                    <!-- Product Image -->
                                    <Border Grid.Column="0"
                                            StrokeShape="RoundRectangle 8"
                                            Stroke="Transparent"
                                            StrokeThickness="0"
                                            WidthRequest="56"
                                            HeightRequest="56"
                                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}">
                                        <Image Source="{Binding PrimaryImageUrl}"
                                               WidthRequest="56"
                                               HeightRequest="56"
                                               Aspect="AspectFill" />
                                    </Border>
                                    <!-- Product Info -->
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                        <Label Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />
                                        <Label Text="{Binding Description}"
                                               FontSize="13"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               IsVisible="{Binding Description, Converter={StaticResource StringToBoolConverter}}" />
                                        <HorizontalStackLayout Spacing="8">
                                            <Border StrokeShape="RoundRectangle 4"
                                                    Stroke="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                                                    StrokeThickness="1"
                                                    Padding="6,2"
                                                    IsVisible="{Binding ProductGroupName, Converter={StaticResource StringToBoolConverter}}">
                                                <Label Text="{Binding ProductGroupName}"
                                                       FontSize="11"
                                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}" />
                                            </Border>
                                            <Label Text="{Binding PreferredStoreAisle, StringFormat='Aisle: {0}'}"
                                                   FontSize="12"
                                                   TextColor="Gray"
                                                   IsVisible="{Binding PreferredStoreAisle, Converter={StaticResource StringToBoolConverter}}" />
                                            <Label Text="{Binding PreferredStoreDepartment}"
                                                   FontSize="12"
                                                   TextColor="Gray"
                                                   IsVisible="{Binding PreferredStoreDepartment, Converter={StaticResource StringToBoolConverter}}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label x:Name="NoResultsLabel"
                               Text="No products found."
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,40,0,0" />
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Bottom actions -->
                <VerticalStackLayout x:Name="ActionButtonsPanel"
                                     Grid.Row="1"
                                     Spacing="4"
                                     Padding="15,8,15,15"
                                     IsVisible="False">
                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />
                    <Button x:Name="AddAsFreeTextButton"
                            Clicked="OnAddAsFreeTextClicked"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                            FontSize="15"
                            HorizontalOptions="Start"
                            Padding="0" />
                    <Button x:Name="SearchExternalButton"
                            Text="Search external sources"
                            Clicked="OnSearchExternalClicked"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#757575, Dark=#BDBDBD}"
                            FontSize="15"
                            HorizontalOptions="Start"
                            Padding="0" />
                    <Button Text="Dismiss"
                            Clicked="OnDismissSearchClicked"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Margin="0,4,0,0" />
                </VerticalStackLayout>

            </Grid>

        </Grid>

    </Grid>
</ContentPage>
