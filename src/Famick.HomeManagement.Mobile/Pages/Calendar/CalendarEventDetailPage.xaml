<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.Calendar.CalendarEventDetailPage"
             Title="Event"
             Shell.NavBarIsVisible="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="OnEditClicked" IconImageSource="pencil" />
    </ContentPage.ToolbarItems>

    <Grid>
        <!-- Loading -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           IsRunning="True"
                           IsVisible="True"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

        <!-- Error -->
        <Border x:Name="ErrorFrame"
                IsVisible="False"
                Margin="20"
                Padding="20"
                StrokeShape="RoundRectangle 10"
                Stroke="Transparent"
                BackgroundColor="#FFEBEE"
                VerticalOptions="Center">
            <VerticalStackLayout Spacing="10">
                <Label x:Name="ErrorLabel"
                       TextColor="#C62828"
                       HorizontalOptions="Center" />
                <Button Text="Retry"
                        Clicked="OnRetryClicked" />
            </VerticalStackLayout>
        </Border>

        <!-- Content -->
        <ScrollView x:Name="ContentScroll" IsVisible="False">
            <VerticalStackLayout Spacing="0" Padding="15">

                <!-- Title -->
                <Label x:Name="TitleLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       Margin="0,0,0,8" />

                <!-- Date & Time Section -->
                <Border Padding="12"
                        Margin="0,0,0,12"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <VerticalStackLayout Spacing="6">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="&#128197;" FontSize="16" VerticalOptions="Center" />
                            <Label x:Name="DateLabel" FontSize="15"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout x:Name="TimeRow" Spacing="8">
                            <Label Text="&#128336;" FontSize="16" VerticalOptions="Center" />
                            <Label x:Name="TimeLabel" FontSize="15"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Location -->
                <Border x:Name="LocationSection"
                        IsVisible="False"
                        Padding="12"
                        Margin="0,0,0,12"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="&#128205;" FontSize="16" VerticalOptions="Center" />
                        <Label x:Name="LocationLabel" FontSize="15"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                    </HorizontalStackLayout>
                </Border>

                <!-- Description -->
                <Border x:Name="DescriptionSection"
                        IsVisible="False"
                        Padding="12"
                        Margin="0,0,0,12"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Description"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="Gray" />
                        <Label x:Name="DescriptionLabel" FontSize="14"
                               TextColor="{AppThemeBinding Light=#424242, Dark=#BDBDBD}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Recurrence -->
                <Border x:Name="RecurrenceSection"
                        IsVisible="False"
                        Padding="12"
                        Margin="0,0,0,12"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="&#128260;" FontSize="16" VerticalOptions="Center" />
                        <Label x:Name="RecurrenceLabel" FontSize="14"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                    </HorizontalStackLayout>
                </Border>

                <!-- Reminder -->
                <Border x:Name="ReminderSection"
                        IsVisible="False"
                        Padding="12"
                        Margin="0,0,0,12"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Transparent"
                        BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="&#128276;" FontSize="16" VerticalOptions="Center" />
                        <Label x:Name="ReminderLabel" FontSize="14"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                    </HorizontalStackLayout>
                </Border>

                <!-- Members -->
                <Label x:Name="MembersHeader"
                       Text="Members"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="0,8,0,8"
                       IsVisible="False" />
                <VerticalStackLayout x:Name="MembersList" Spacing="6" />

                <!-- Created By -->
                <Label x:Name="CreatedByLabel"
                       FontSize="12"
                       TextColor="Gray"
                       Margin="0,20,0,0" />

                <!-- Delete Button -->
                <Button x:Name="DeleteButton"
                        Text="Delete Event"
                        Clicked="OnDeleteClicked"
                        Margin="0,20,0,20"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        CornerRadius="8" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
