<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.StockOverviewPage"
             Title="Stock Overview"
             Shell.NavBarIsVisible="True"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <RefreshView x:Name="StockRefreshView"
                 IsRefreshing="{Binding IsRefreshing}"
                 Refreshing="OnRefreshing">
        <ScrollView>
            <VerticalStackLayout Spacing="12" Padding="15">

                <!-- Statistics Cards -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="10">

                        <!-- Total Items Card -->
                        <Border Padding="12,10"
                                StrokeShape="RoundRectangle 10"
                                Stroke="Transparent"
                                BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                                MinimumWidthRequest="110">
                            <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                                <Label x:Name="TotalItemsCount"
                                       Text="0"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}" />
                                <Label Text="Total Items"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Expired Card -->
                        <Border Padding="12,10"
                                StrokeShape="RoundRectangle 10"
                                Stroke="Transparent"
                                BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#B71C1C}"
                                MinimumWidthRequest="110">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnExpiredCardTapped" />
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                                <Label x:Name="ExpiredCount"
                                       Text="0"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#C62828, Dark=#EF9A9A}" />
                                <Label Text="Expired"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#D32F2F, Dark=#E57373}" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Due Soon Card -->
                        <Border Padding="12,10"
                                StrokeShape="RoundRectangle 10"
                                Stroke="Transparent"
                                BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#E65100}"
                                MinimumWidthRequest="110">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDueSoonCardTapped" />
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                                <Label x:Name="DueSoonCount"
                                       Text="0"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#E65100, Dark=#FFCC80}" />
                                <Label Text="Due Soon"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#F57C00, Dark=#FFB74D}" />
                            </VerticalStackLayout>
                        </Border>

                        <!-- Below Min Stock Card -->
                        <Border Padding="12,10"
                                StrokeShape="RoundRectangle 10"
                                Stroke="Transparent"
                                BackgroundColor="{AppThemeBinding Light=#FCE4EC, Dark=#880E4F}"
                                MinimumWidthRequest="110">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnBelowMinCardTapped" />
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                                <Label x:Name="BelowMinCount"
                                       Text="0"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#AD1457, Dark=#F48FB1}" />
                                <Label Text="Below Min"
                                       FontSize="12"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#C2185B, Dark=#F06292}" />
                            </VerticalStackLayout>
                        </Border>

                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Search Bar -->
                <Border Padding="8,4"
                        StrokeShape="RoundRectangle 10"
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Entry x:Name="SearchEntry"
                               Grid.Column="0"
                               Placeholder="Search products..."
                               FontSize="16"
                               BackgroundColor="Transparent"
                               TextChanged="OnSearchTextChanged"
                               Completed="OnSearchSubmitted" />
                        <ImageButton Grid.Column="1"
                                     Source="camera_outline"
                                     WidthRequest="40"
                                     HeightRequest="40"
                                     BackgroundColor="Transparent"
                                     Clicked="OnScanClicked"
                                     ToolTipProperties.Text="Scan barcode" />
                    </Grid>
                </Border>

                <!-- Filter Chips -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="FilterAllButton"
                                Text="All"
                                FontSize="13"
                                HeightRequest="34"
                                Padding="12,0"
                                CornerRadius="17"
                                BackgroundColor="#1976D2"
                                TextColor="White"
                                Clicked="OnFilterAllClicked" />
                        <Button x:Name="FilterExpiredButton"
                                Text="Expired"
                                FontSize="13"
                                HeightRequest="34"
                                Padding="12,0"
                                CornerRadius="17"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                                Clicked="OnFilterExpiredClicked" />
                        <Button x:Name="FilterDueSoonButton"
                                Text="Due Soon"
                                FontSize="13"
                                HeightRequest="34"
                                Padding="12,0"
                                CornerRadius="17"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                                Clicked="OnFilterDueSoonClicked" />
                        <Button x:Name="FilterBelowMinButton"
                                Text="Below Min"
                                FontSize="13"
                                HeightRequest="34"
                                Padding="12,0"
                                CornerRadius="17"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}"
                                Clicked="OnFilterBelowMinClicked" />
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Loading State -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsVisible="False"
                                   IsRunning="False"
                                   Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   HorizontalOptions="Center"
                                   Margin="0,20" />

                <!-- Product List -->
                <CollectionView x:Name="ProductsCollection"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" Margin="0,3"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#40000000, Dark=#20000000}"
                                            Offset="0,1"
                                            Radius="4"
                                            Opacity="0.1" />
                                </Border.Shadow>
                                <Grid ColumnSpacing="10" RowSpacing="6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Product Image -->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                            HeightRequest="50" WidthRequest="50"
                                            StrokeShape="RoundRectangle 8"
                                            Stroke="Transparent"
                                            BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#3A3A3A}"
                                            VerticalOptions="Start">
                                        <Image Source="{Binding ImageSource}"
                                               HeightRequest="50" WidthRequest="50"
                                               Aspect="AspectFill"
                                               IsVisible="{Binding HasImage}" />
                                    </Border>

                                    <!-- Product Name -->
                                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                           Text="{Binding ProductName}"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                                    <!-- Amount + Expiry Info -->
                                    <Label Grid.Row="1" Grid.Column="1"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#444444, Dark=#CCCCCC}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding TotalAmount, StringFormat='{0:F1}'}" />
                                                <Span Text=" " />
                                                <Span Text="{Binding QuantityUnitName}" FontSize="12" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Label Grid.Row="1" Grid.Column="2"
                                           Text="{Binding ExpiryDisplayText}"
                                           FontSize="12"
                                           HorizontalOptions="End"
                                           TextColor="{Binding ExpiryTextColor}" />

                                    <!-- Quick Actions + Status Badges -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                                           Spacing="8">
                                        <!-- Consume Button -->
                                        <Button Text="Consume"
                                                FontSize="12"
                                                HeightRequest="30"
                                                Padding="10,0"
                                                CornerRadius="6"
                                                BackgroundColor="{AppThemeBinding Light=#FFCDD2, Dark=#B71C1C}"
                                                TextColor="{AppThemeBinding Light=#C62828, Dark=#FFCDD2}"
                                                Clicked="OnConsumeOneClicked"
                                                CommandParameter="{Binding .}" />

                                        <!-- Add Button -->
                                        <Button Text="Add"
                                                FontSize="12"
                                                HeightRequest="30"
                                                Padding="10,0"
                                                CornerRadius="6"
                                                BackgroundColor="{AppThemeBinding Light=#C8E6C9, Dark=#1B5E20}"
                                                TextColor="{AppThemeBinding Light=#2E7D32, Dark=#C8E6C9}"
                                                Clicked="OnAddOneClicked"
                                                CommandParameter="{Binding .}" />

                                        <!-- Status Badges -->
                                        <Border Padding="6,2"
                                                StrokeShape="RoundRectangle 4"
                                                Stroke="Transparent"
                                                BackgroundColor="#F44336"
                                                IsVisible="{Binding IsExpired}">
                                            <Label Text="EXPIRED" FontSize="10" TextColor="White" FontAttributes="Bold" />
                                        </Border>

                                        <Border Padding="6,2"
                                                StrokeShape="RoundRectangle 4"
                                                Stroke="Transparent"
                                                BackgroundColor="#FF9800"
                                                IsVisible="{Binding IsDueSoonOnly}">
                                            <Label Text="DUE SOON" FontSize="10" TextColor="White" FontAttributes="Bold" />
                                        </Border>

                                        <Border Padding="6,2"
                                                StrokeShape="RoundRectangle 4"
                                                Stroke="Transparent"
                                                BackgroundColor="#E91E63"
                                                IsVisible="{Binding IsBelowMinStock}">
                                            <Label Text="LOW" FontSize="10" TextColor="White" FontAttributes="Bold" />
                                        </Border>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="10"
                                             Padding="30">
                            <Label Text="No items match your filters"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                            <Label Text="Try adjusting your search or filters"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#777777}" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
