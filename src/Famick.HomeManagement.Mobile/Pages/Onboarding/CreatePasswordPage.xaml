<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.Onboarding.CreatePasswordPage"
             x:Name="ThisPage"
             Shell.FlyoutBehavior="Disabled">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- Title -->
            <Label Text="Secure Your Account"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <Label x:Name="SubtitleLabel"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   Margin="0,0,0,10" />

            <!-- Name Fields -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Your Name" FontSize="14" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Entry x:Name="FirstNameEntry"
                               Grid.Column="0"
                               Placeholder="First name"
                               IsTextPredictionEnabled="False" />
                        <Entry x:Name="LastNameEntry"
                               Grid.Column="1"
                               Placeholder="Last name"
                               IsTextPredictionEnabled="False" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Password -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Create Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password (min. 8 characters)"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />

                    <Label Text="Confirm Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm password"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />

                    <!-- Password Requirements -->
                    <Label Text="Password must be at least 8 characters"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Legal Consent -->
            <HorizontalStackLayout x:Name="ConsentSection" Spacing="5" IsVisible="False">
                <CheckBox x:Name="ConsentCheckBox"
                          Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                          CheckedChanged="OnConsentCheckedChanged" />
                <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                    <Label FontSize="13" TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="I agree to the " />
                                <Span Text="Terms of Service"
                                      TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTermsTapped" />
                                    </Span.GestureRecognizers>
                                </Span>
                                <Span Text=" and " />
                                <Span Text="Privacy Policy"
                                      TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnPrivacyTapped" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Create Account Button -->
            <Button x:Name="CreateAccountButton"
                    Text="Create Account"
                    Clicked="OnCreateAccountClicked"
                    BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <!-- OAuth Section (dynamically populated) -->
            <VerticalStackLayout x:Name="OAuthSection" IsVisible="False" Spacing="15">
                <BoxView HeightRequest="1"
                         BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                         Margin="0,5" />
                <Label Text="Or continue with"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                <FlexLayout x:Name="OAuthButtonsContainer"
                            Wrap="Wrap"
                            JustifyContent="Center"
                            AlignItems="Center" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
