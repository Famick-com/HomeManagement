<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.Onboarding.WelcomePage"
             Title="Welcome"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- App Logo/Title -->
            <Image Source="famick_logo"
                   HeightRequest="80"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <Label Text="Welcome to Famick"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <Label Text="Create your household to get started"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   Margin="0,0,0,20" />

            <!-- Household Info -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Household Name" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="HouseholdNameEntry"
                           Placeholder="e.g., The Smiths, Beach House"
                           IsTextPredictionEnabled="False" />

                    <Label Text="Your Email" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="EmailEntry"
                           Placeholder="email@example.com"
                           Keyboard="Email"
                           IsTextPredictionEnabled="False" />
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Next Button -->
            <Button x:Name="NextButton"
                    Text="Next"
                    Clicked="OnNextClicked"
                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <!-- Separator -->
            <BoxView HeightRequest="1"
                     BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                     Margin="0,10" />

            <!-- QR Code Option -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Already have an account?"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />

                <Button Text="Sign In"
                        Clicked="OnSignInClicked"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                        FontSize="16" />

                <Button x:Name="QrCodeButton"
                        Text="I have a QR Code"
                        Clicked="OnQrCodeClicked"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                        FontSize="16" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
