<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.PlaceholderPage"
             Title="Coming Soon">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Padding="30">
        <Label Text="Coming Soon"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

        <Label Text="This feature is not yet available."
               FontSize="16"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />

        <Label Text="Check back in a future update!"
               FontSize="14"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
    </VerticalStackLayout>
</ContentPage>
