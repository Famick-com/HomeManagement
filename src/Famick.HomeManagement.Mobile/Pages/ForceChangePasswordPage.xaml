<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.ForceChangePasswordPage"
             Title="Change Password"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- App Logo -->
            <Image Source="famick_logo"
                   Aspect="AspectFit"
                   HeightRequest="80"
                   HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Change Your Password"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <Label Text="Your administrator requires you to change your password before continuing."
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   Margin="0,0,0,10" />

            <!-- Password Fields -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Current Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="CurrentPasswordEntry"
                           Placeholder="Enter current password"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />

                    <Label Text="New Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="NewPasswordEntry"
                           Placeholder="New password (min. 8 characters)"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />

                    <Label Text="Confirm New Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm new password"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />

                    <!-- Password Requirements -->
                    <Label Text="Password must be at least 8 characters"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Success Message -->
            <Label x:Name="SuccessLabel"
                   TextColor="Green"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Change Password Button -->
            <Button x:Name="ChangePasswordButton"
                    Text="Change Password"
                    Clicked="OnChangePasswordClicked"
                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
