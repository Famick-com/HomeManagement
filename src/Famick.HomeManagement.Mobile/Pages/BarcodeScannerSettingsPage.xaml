<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.Mobile.Pages.BarcodeScannerSettingsPage"
             Title="Barcode Scanner"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <Label Text="Barcode Scanner"
                   FontSize="24"
                   FontAttributes="Bold"
                   Padding="20,30,20,15"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <Border Padding="20" StrokeShape="RoundRectangle 12" Stroke="Transparent" Margin="15,0,15,30"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="12">

                    <!-- No Scanner State -->
                    <VerticalStackLayout x:Name="NoScannerSection" Spacing="8">
                        <Label Text="No BLE scanner configured. Connect a Bluetooth barcode scanner for hands-free scanning."
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        <Button Text="Find Scanner"
                                Clicked="OnFindScannerClicked"
                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                TextColor="{AppThemeBinding Light=White, Dark=Black}"
                                CornerRadius="8" HeightRequest="44" />
                    </VerticalStackLayout>

                    <!-- Connected Scanner State -->
                    <VerticalStackLayout x:Name="ConnectedScannerSection" IsVisible="False" Spacing="8">
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <Label x:Name="ScannerStatusIndicator" Text="&#x25CF;" FontSize="14"
                                   TextColor="Green" VerticalOptions="Center" />
                            <VerticalStackLayout>
                                <Label x:Name="ScannerNameLabel" FontSize="14" FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label x:Name="ScannerStatusLabel" FontSize="12"
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Test Result -->
                        <Border x:Name="TestResultBorder" IsVisible="False" Padding="12"
                                StrokeShape="RoundRectangle 8"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"
                                BackgroundColor="{AppThemeBinding Light=#F1F8E9, Dark=#1B5E20}">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Last scan:" FontSize="12"
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                                <Label x:Name="TestResultLabel" FontSize="16" FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </VerticalStackLayout>
                        </Border>

                        <HorizontalStackLayout Spacing="8">
                            <Button Text="Test Scanner"
                                    Clicked="OnTestScannerClicked"
                                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                    TextColor="{AppThemeBinding Light=White, Dark=Black}"
                                    CornerRadius="8" HeightRequest="44"
                                    HorizontalOptions="FillAndExpand" />
                            <Button Text="Remove Scanner"
                                    Clicked="OnRemoveScannerClicked"
                                    BackgroundColor="Transparent"
                                    BorderColor="{AppThemeBinding Light=#D32F2F, Dark=#EF9A9A}"
                                    BorderWidth="2"
                                    TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF9A9A}"
                                    CornerRadius="8" HeightRequest="44"
                                    HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Discovery State -->
                    <VerticalStackLayout x:Name="DiscoverySection" IsVisible="False" Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <ActivityIndicator x:Name="DiscoverySpinner" IsRunning="True"
                                               HeightRequest="20" WidthRequest="20"
                                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />
                            <Label x:Name="DiscoveryStatusLabel" Text="Searching for scanners..."
                                   FontSize="13" VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        </HorizontalStackLayout>

                        <CollectionView x:Name="DiscoveredScannersCollection"
                                        SelectionMode="Single"
                                        SelectionChanged="OnScannerSelected"
                                        HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,4" StrokeShape="RoundRectangle 8"
                                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#444444}"
                                            BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#333333}">
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding DisplayIcon}"
                                                   FontSize="20" VerticalOptions="Center" />
                                            <VerticalStackLayout VerticalOptions="Center">
                                                <Label Text="{Binding Name}" FontSize="14"
                                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                                <Label Text="{Binding DisplayLabel}" FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                                            </VerticalStackLayout>
                                            <Label Text="{Binding Rssi, StringFormat='{0} dBm'}"
                                                   FontSize="11"
                                                   TextColor="{AppThemeBinding Light=#999999, Dark=#777777}"
                                                   HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <Label Text="No scanners found yet..."
                                       FontSize="13" HorizontalOptions="Center" Padding="0,20"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#777777}" />
                            </CollectionView.EmptyView>
                        </CollectionView>

                        <HorizontalStackLayout Spacing="8">
                            <CheckBox x:Name="AdvancedModeCheckbox"
                                      CheckedChanged="OnAdvancedModeChanged" />
                            <Label Text="Advanced mode (show all BLE devices)"
                                   FontSize="13" VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                        </HorizontalStackLayout>

                        <Button Text="Cancel"
                                Clicked="OnCancelDiscoveryClicked"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                FontSize="14" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
