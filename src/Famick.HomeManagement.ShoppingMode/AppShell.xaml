<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Famick.HomeManagement.ShoppingMode.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:pages="clr-namespace:Famick.HomeManagement.ShoppingMode.Pages"
    Title="Shopping"
    FlyoutBehavior="Flyout"
    ios:NavigationPage.IsNavigationBarTranslucent="True">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <!-- IMPORTANT: Removing explicit background allows iOS 26 Liquid Glass -->
                <Setter Property="Shell.BackgroundColor" Value="Transparent" />
                <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Flyout Header: Use a slightly translucent color to match the glass theme -->
    <Shell.FlyoutHeader>
        <Grid HeightRequest="120" BackgroundColor="#E0DBF0C9" Padding="10"> <!-- Semi-transparent -->
            <Image Source="famick_logo"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HeightRequest="80" />
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Main Content -->
    <FlyoutItem Title="Shopping Lists">
        <ShellContent
            Title="Shopping Lists"
            ContentTemplate="{DataTemplate pages:ListSelectionPage}"
            Route="ListSelectionPage" />
    </FlyoutItem>

    <!-- Menu Footer with Actions -->
    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10" Spacing="5">
            <Button Text="About"
                    Clicked="OnAboutClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    HorizontalOptions="Start" />
            <Button Text="Sign Out"
                    Clicked="OnSignOutClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    HorizontalOptions="Start" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
