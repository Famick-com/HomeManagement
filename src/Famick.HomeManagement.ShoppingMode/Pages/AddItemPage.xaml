<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.ShoppingMode.Pages.AddItemPage"
             Title="Add Item">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Barcode Display -->
            <Border x:Name="BarcodeFrame"
                    Padding="15"
                    StrokeShape="RoundRectangle 10"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                    IsVisible="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Barcode Scanned"
                           FontSize="12"
                           TextColor="Gray" />
                    <Label x:Name="BarcodeLabel"
                           FontSize="18"
                           FontAttributes="Bold" />
                </VerticalStackLayout>
            </Border>

            <!-- Product Lookup Result -->
            <Border x:Name="LookupResultFrame"
                    Padding="15"
                    StrokeShape="RoundRectangle 10"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"
                    IsVisible="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Product Found"
                           FontSize="12"
                           TextColor="Gray" />
                    <Label x:Name="LookupProductName"
                           FontSize="16"
                           FontAttributes="Bold" />
                    <Label x:Name="LookupPrice"
                           FontSize="14"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Border>

            <!-- Manual Entry Section -->
            <Border Padding="15" StrokeShape="RoundRectangle 10" Stroke="Transparent" StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Product Name" FontSize="14" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry x:Name="ProductNameEntry"
                               Grid.Column="0"
                               Placeholder="Enter product name..."
                               ReturnType="Search"
                               Completed="OnSearchCompleted" />
                        <Button x:Name="SearchButton"
                                Grid.Column="1"
                                Text="Search"
                                Clicked="OnSearchClicked"
                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                                TextColor="White"
                                HeightRequest="40"
                                WidthRequest="80"
                                CornerRadius="8" />
                    </Grid>

                    <!-- Search Results -->
                    <CollectionView x:Name="SearchResultsView"
                                    IsVisible="False"
                                    MaximumHeightRequest="200"
                                    SelectionMode="Single"
                                    SelectionChanged="OnSearchResultSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="0,2" StrokeShape="RoundRectangle 8" Stroke="Transparent" StrokeThickness="0"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#3A3A3A}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding ProductName}"
                                                   FontSize="14"
                                                   FontAttributes="Bold" />
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Aisle, StringFormat='Aisle: {0}'}"
                                                       FontSize="12"
                                                       TextColor="Gray"
                                                       IsVisible="{Binding Aisle, Converter={StaticResource StringToBoolConverter}}" />
                                                <Label Text="{Binding Department}"
                                                       FontSize="12"
                                                       TextColor="Gray" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="1"
                                               Text="{Binding Price, StringFormat='${0:F2}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- No Results Message -->
                    <Label x:Name="NoResultsLabel"
                           Text="No products found. Enter name manually."
                           FontSize="12"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           IsVisible="False" />

                    <Label Text="Quantity" FontSize="14" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Button x:Name="MinusButton"
                                Text="-"
                                Clicked="OnMinusClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontSize="24"
                                BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />

                        <Label x:Name="QuantityLabel"
                               Text="1"
                               FontSize="28"
                               FontAttributes="Bold"
                               WidthRequest="60"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />

                        <Button x:Name="PlusButton"
                                Text="+"
                                Clicked="OnPlusClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontSize="24"
                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                                TextColor="White" />
                    </HorizontalStackLayout>

                    <Label Text="Note (optional)" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="NoteEntry"
                           Placeholder="Add a note..." />

                </VerticalStackLayout>
            </Border>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False" />

            <!-- Add Button -->
            <Button x:Name="AddButton"
                    Text="Add to List"
                    Clicked="OnAddClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Cancel Button -->
            <Button Text="Cancel"
                    Clicked="OnCancelClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
