<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Famick.HomeManagement.ShoppingMode.Pages.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- App Logo/Title -->
            <Label Text="Famick Shopping"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

            <Label Text="Sign in to start shopping"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   Margin="0,0,0,20" />

            <!-- Server Mode Selection -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Server" FontSize="14" FontAttributes="Bold" />
                    <Picker x:Name="ServerModePicker"
                            Title="Select server type"
                            SelectedIndexChanged="OnServerModeChanged"
                            HorizontalOptions="FillAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Cloud (famick.com)</x:String>
                                <x:String>Self-Hosted</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <!-- Self-hosted URL (only visible when self-hosted selected) -->
                    <VerticalStackLayout x:Name="SelfHostedUrlSection" IsVisible="False" Spacing="5">
                        <Label Text="Server URL" FontSize="12" />
                        <Entry x:Name="ServerUrlEntry"
                               Placeholder="https://your-server.com"
                               Keyboard="Url" />
                        <Button x:Name="TestConnectionButton"
                                Text="Test Connection"
                                Clicked="OnTestConnection"
                                FontSize="12"
                                HeightRequest="35" />
                        <Label x:Name="ConnectionStatusLabel"
                               FontSize="12"
                               IsVisible="False"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Credentials -->
            <Frame Padding="15" CornerRadius="10" HasShadow="False"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Email" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="EmailEntry"
                           Placeholder="email@example.com"
                           Keyboard="Email"
                           IsTextPredictionEnabled="False" />

                    <Label Text="Password" FontSize="14" FontAttributes="Bold" />
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           IsTextPredictionEnabled="False" />
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Text="Sign In"
                    Clicked="OnLoginClicked"
                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25" />

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
